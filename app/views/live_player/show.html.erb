<%= turbo_frame_tag :live_player_show do %>
  <% if @channel %>
    <%= render "video_frame", locals: { h2: "Watch", h3: @channel } do %>
      <iframe
        class="responsive-iframe"
        src="https://player.twitch.tv/?channel=<%= @channel %>&parent=<%= request.host %>"
        allowfullscreen="true">
      </iframe>
    <% end %>
  <% else %>
    <%= render "video_frame", locals: { h2: "Watch", h3: "on YouTube" } do %>
      <iframe
        class="responsive-iframe"
        src="https://www.youtube.com/embed/GssbO8BXOAg?start=16"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen="true">
      </iframe>
      </div>
    <% end %>
  <% end %>
<% end %>
