<table>
  <tr>
    <th>Name</th>
    <th>Last Match</th>
    <th>Played</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>Draws</th>
  </tr>
  <% @players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.last_match_date && local_time(player.last_match_date) %></td>
      <td><%= player.match_count %></td>
      <td><%= player.win_count %></td>
      <td><%= player.loss_count %></td>
      <td><%= player.draw_count %></td>
    </tr>
  <% end %>
</table>
